generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model usuarios {
  id          Int       @id @default(autoincrement())
  name        String    // Removido @unique
  email       String    // Removido @unique
  password    String
  role_id     Int       @default(1)
  tenant_id   Int
  created_at  DateTime  @default(now())
  updated_at  DateTime  @default(now())
  deleted_at  DateTime?

  // Adicione isso para o Prisma reconhecer os índices que você criou no SQL
  @@index([email], map: "idx_usuarios_email_ativo")
  @@index([name], map: "idx_usuarios_name_ativo")
}
