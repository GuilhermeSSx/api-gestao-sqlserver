generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model usuarios {
  id         Int       @id @default(autoincrement())
  name       String    @unique
  email      String    @unique
  password   String
  role_id    Int       @default(1)
  tenant_id  Int
  created_at DateTime  @default(now())
  updated_at DateTime  @default(now())
  deleted_at DateTime?

  @@index([tenant_id], map: "idx_usuarios_tenant")
}
